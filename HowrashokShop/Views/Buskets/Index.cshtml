@model IEnumerable<HowrashokShop.Models.Busket>

@{
    ViewData["Title"] = "Index";
}

@{
    Layout = "_Layout";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">

<div class="content">
    <div class="centre">
        <form method="post">
            <button id="OrderButton" type="submit" style="width: 150%;
                                         height: 4%;
                                         margin-left: -25%;
                                         font-size: 16px; padding: 10%" asp-action="Delete" asp- asp-controller="Buskets">
                Оформить
            </button>
            <link rel="stylesheet" href="~/css/ButtonStyle.css" />
            <link rel="stylesheet" href="~/css/Centre.css" />
        </form>
    </div>
    <div class="row mt-2 mb-5 margin_row">
        @foreach (var item in Model)
        {
            <div class="col-md-3 item">
                <a asp-action="Details" asp-route-id="@item.Id">
                    <div>
                        <img src="~/Images/@Html.DisplayFor(modelItem => item.Product.Photos.OrderBy(c => c.Id).ToList()[0].Photopath)" class="img_item" width="100%" />
                        <div class="main_in_item">
                            <p class="mainfont">@Html.DisplayFor(modelItem => item.Product.Category.Name)</p>
                            <p class="mainfont">@Html.DisplayFor(modelItem => item.Product.Costs.OrderByDescending(c => c.DateOfSetting).ToList()[0].Size)</p>
                        </div>
                        <p class="dopfont">@Html.DisplayFor(modelItem => item.Product.DescToShort)</p>

                        <form method="post">
                            <button id="DeleteButton" type="submit" style="margin-left: 35%;
                                         margin-right: 35%;
                                         margin-bottom: 5%;" asp-action="Delete" asp- asp-controller="Buskets" asp-route-id="@item.Id"
                            asp-route-user="@item.ClientId">
                                Удалить
                            </button>
                        </form>
                        <link rel="stylesheet" href="~/css/ButtonStyle.css" />
                    </div>
               </a>
            </div>
        }
    </div>
</div>
