@model HowrashokShop.Models.Product

@{
    ViewData["Title"] = "Details";
}

@{
    Layout = "_Layout";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">

<div class="row content">
    <div id="carouselExample" class="carousel slide col-md-4">
        <div class="carousel-inner">
            @foreach (var item in Model.Photos)
            {
                <div class="carousel-item @(item == Model.Photos.First() ? "active" : "")">
                    <img src="~/Images/@item.Photopath" class="d-block w-100" alt="...">
                </div>
            }
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Предыдущий</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Следующий</span>
        </button>
    </div>
    <div class="col-md-8 content">
        <h1 class="margin_class minus_margin_class" style="font-family: 'Ubuntu Condensed', sans-serif;
                                                           color: #5893B9;">
            @Html.DisplayFor(modelItem => Model.Name)
        </h1>
        <p class="margin_class mainfont" id="IdBox" style="font-family: 'Ubuntu Condensed', sans-serif;
                                                           color: #5893B9; visibility: collapse">@Html.DisplayFor(modelItem => Model.Id)</p>
        <p class="margin_class mainfont" style="font-family: 'Ubuntu Condensed', sans-serif;
                                                           color: #5893B9;">@Html.DisplayFor(modelItem => Model.Description)</p>
        <p class="margin_class mainfont" style="font-family: 'Ubuntu Condensed', sans-serif;
                                                           color: #5893B9;">@Html.DisplayFor(modelItem => Model.Costs.OrderByDescending(c => c.DateOfSetting).ToList()[0].Size)&#8381;</p>
        <p class="margin_class mainfont" style="font-family: 'Ubuntu Condensed', sans-serif;
                                                           color: #5893B9;">
            @foreach (var item in Model.Materials)
            {
                @Html.DisplayFor(modelItem => item.Name)
                @if (!item.Equals(Model.Materials.Last()))
                {
                    @Html.Raw(", ")
                }
            }
        </p>
        
        <form asp-action="">
            <button type="submit" id="busketButton" style="margin-left: 5%;
                                         margin-right: 5%;
                                         margin-bottom: 5%;">
                В корзину
            </button>
        </form>
        <link href="~/css/ButtonStyle.css" rel="stylesheet"/>
    </div>
</div>
<script src="~/js/addBusket.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
