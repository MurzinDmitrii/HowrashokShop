@model HowrashokShop.Models.Order

@{
    ViewData["Title"] = "Create";
}

@{
    Layout = "_Layout";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
<div class="row centre content">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="ClientId" type="hidden" class="form-control" value="@ViewData["Client"]"></input>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label" style="width: 80%;
                                                         outline: none;
                                                         color: #5893B9;
                                                         font-family: 'Ubuntu Condensed', sans-serif;">
                                                         Пожалуйста, введите свой адрес для доставки по почте или оставьте поле незаполненным для самовывоза</label>
                <input asp-for="Address" class="form-control" style="margin: 1%"/>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group" id="OrderButtonDiv">
                <input type="submit" id="OrderButton" value="Далее" class="btn btn-primary" />
            </div>
            <link rel="stylesheet" href="~/css/ButtonStyle.css" />
            <link rel="stylesheet" href="~/css/Centre.css" />
        </form>
    </div>
</div>


