@model IEnumerable<HowrashokShop.Models.Order>

@{
    ViewData["Title"] = "Index";
}

@{
    Layout = "_Layout";
}

<link href="~/css/Index.css?0" rel="stylesheet"/>

<div class="content">

    <h1 class="dopfont">История заказов</h1>

    @foreach (var item in Model)
    {
        <div class="item">
            <a asp-controller="Orders" asp-action="Details" class="dopfont" asp-route-id="@item.Id">
                <h1 class="dopfont">
                    Заказ №@Html.DisplayFor(modelItem => item.Id)
                    @if (item.Completed)
                    {
                        <h1 class="dopfont">(выполнен)</h1>
                    }
                    else
                    {
                        <h1 class="dopfont">(в обработке)</h1>
                    }
                </h1>
            </a>
        </div>
    }
</div>
